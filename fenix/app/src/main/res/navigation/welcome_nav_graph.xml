<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/welcome1"
    android:id="@+id/welcome_nav_graph">

    <fragment
        android:id="@+id/welcome1"
        android:name="org.mozilla.fenix.welcome.WelcomeFragment1"
        android:label="welcome1"
        tools:layout="@layout/fragment_welcome_1" >
        <action
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            android:id="@+id/action_welcome1_to_welcome2"
            app:destination="@id/welcome2" />

        <action
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            android:id="@+id/action_welcome1_to_termofservice"
            app:destination="@id/termofservice" />
    </fragment>

    <fragment
        android:id="@+id/welcome2"
        android:name="org.mozilla.fenix.welcome.WelcomeFragment2"
        android:label="welcome2"
        tools:layout="@layout/fragment_welcome_2" >
        <action
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            android:id="@+id/action_welcome2_to_welcome3"
            app:destination="@id/welcome3" />
    </fragment>

    <fragment
        android:id="@+id/welcome3"
        android:name="org.mozilla.fenix.welcome.WelcomeFragment3"
        android:label="welcome3"
        tools:layout="@layout/fragment_welcome_3" >
    </fragment>

    <fragment
        android:id="@+id/termofservice"
        android:name="org.mozilla.fenix.welcome.TermOfServiceFragment"
        android:label="termofservice"
        tools:layout="@layout/term_of_service_fragment" >
        <action
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/fade_out"
            android:id="@+id/action_termofservice_to_welcome1"
            app:destination="@id/welcome1" />
    </fragment>
</navigation>